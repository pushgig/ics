{
  "name": "push-ics",
  "version": "0.1.0",
  "description": "iCal (.ics) generator with full support for timezones",
  "main": "src/index.js",
  "scripts": {
    "build": "babel src --out-dir lib",
    "prepublish": "yarn build",
    "lint": "eslint src",
    "prettier": "prettier --write --config ./.prettierrc",
    "format": "yarn prettier \"src/**/*.js\"",
    "flow": "flow --show-all-errors; test $? -eq 0",
    "test": "jest",
    "ci": "yarn flow && yarn lint && yarn test"
  },
  "repository": {
    "git": "https://github.com/pushgig/push-ics"
  },
  "author": "John French <john.french@pushgig.com>",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ],
    "verbose": true
  },
  "dependencies": {
    "luxon": "1.15.0"
  },
  "devDependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.5",
    "@babel/plugin-proposal-object-rest-spread": "7.4.4",
    "@babel/plugin-transform-runtime": "7.4.4",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-flow": "7.0.0",
    "@babel/runtime": "7.4.5",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.8.0",
    "eslint": "5.3.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-flowtype": "3.9.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "3.1.0",
    "flow-bin": "0.99.1",
    "jest": "24.8.0",
    "prettier": "^2.3.1"
  }
}

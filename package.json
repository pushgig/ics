  "dependencies": {
    "luxon": "1.15.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "eslint": "5.3.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "3.1.0",
    "jest": "^27.0.4",
    "prettier": "^2.3.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2"
  }
}
